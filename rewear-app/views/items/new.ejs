<%- include('../partials/header') %>

<div class="form-container container">
    <h1 class="form-page-title">List a New Item</h1>
    <p class="form-page-subtitle">Share your pre-loved fashion with the community.</p>

    <form action="/items" method="POST" enctype="multipart/form-data" class="item-form">
        <!-- ... (Title, Description, Category, etc. fields are the same) ... -->
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" placeholder="e.g., Vintage Blue Denim Jacket" required>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="5" placeholder="Describe your item, its style, fabric, and any flaws." required></textarea>
        </div>
        <div class="form-grid">
            <div class="form-group">
                <label for="category">Category</label>
                <select id="category" name="category" required>
                    <option value="" disabled selected>Select a category...</option>
                    <option value="Tops">Tops</option>
                    <option value="Bottoms">Bottoms</option>
                    <option value="Dresses">Dresses</option>
                    <option value="Outerwear">Outerwear</option>
                    <option value="Accessories">Accessories</option>
                    <option value="Shoes">Shoes</option>
                </select>
            </div>
            <div class="form-group">
                <label for="condition">Condition</label>
                <select id="condition" name="condition" required>
                    <option value="" disabled selected>Select condition...</option>
                    <option value="New with tags">New with tags</option>
                    <option value="Excellent">Excellent</option>
                    <option value="Good">Good</option>
                    <option value="Fair">Fair</option>
                </select>
            </div>
        </div>
        <div class="form-grid">
            <div class="form-group">
                <label for="size">Size</label>
                <input type="text" id="size" name="size" placeholder="e.g., Medium, 10, 42" required>
            </div>
            <div class="form-group">
                <label for="price">Price (â‚¹)</label>
                <input type="number" id="price" name="price" value="100" min="0" required>
            </div>
        </div>
        <div class="form-group">
            <label>Location</label>
            <div class="location-grid">
                <select id="state-select" name="state" required>
                    <option value="" disabled selected>Select State</option>
                </select>
                <select id="city-select" name="city" required disabled>
                    <option value="" disabled selected>Select City</option>
                </select>
                <select id="area-select" name="area" required disabled>
                    <option value="" disabled selected>Select Area</option>
                </select>
            </div>
        </div>
        
        <!-- Image Upload Section -->
        <div class="form-group">
            <label>Upload Images (up to 8)</label> <!-- Changed text here -->
            <div class="image-upload-container">
                <div class="image-preview-grid" id="image-preview-grid">
                </div>
                <button type="button" id="add-image-btn" class="add-image-btn">+</button>
            </div>
            <input type="file" id="image-upload-input" name="images" accept="image/png, image/jpeg, image/webp" multiple style="display: none;">
        </div>

        <button type="submit" class="btn btn-primary">List My Item</button>
    </form>
</div>

<%- include('../partials/footer') %>
